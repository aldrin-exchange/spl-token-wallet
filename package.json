{
  "name": "cryptocurrencies-ai-wallet",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@ledgerhq/hw-transport-webhid": "^6.11.2",
    "@ledgerhq/hw-transport-webusb": "^6.11.2",
    "@project-serum/anchor": "^0.18.2",
    "@project-serum/serum": "^0.13.24",
    "@solana/buffer-layout": "^3.0.0",
    "@solana/spl-token-registry": "^0.2.273",
    "@solana/web3.js": "1.31.0",
    "@types/bn.js": "^5.1.0",
    "@types/chrome": "^0.0.164",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "bip32": "^3.0.1",
    "bip39": "^3.0.3",
    "bn.js": "^5.1.2",
    "bs58": "^4.0.1",
    "clipboard-copy": "^4.0.1",
    "dayjs": "^1.10.4",
    "ed25519-hd-key": "^1.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hot-loader": "^4.13.0",
    "react-router-dom": "^6.0.2",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "gh-pages": "^3.1.0",
    "git-format-staged": "^2.1.0",
    "husky": "^7.0.4",
    "prettier": "^2.2.1",
    "react-scripts": "4.0.3",
    "typescript": "4.5.2"
  },
  "scripts": {
    "predeploy": "git pull --ff-only && yarn && yarn build",
    "deploy": "gh-pages -d build",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.js\" \"extension/src/*.js\" --write",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "buildMaster": "cross-env MASTER_BUILD=TRUE && react-scripts build",
    "build:extension": "yarn build && cp -a ./build/. ./extension/build/ && yarn build:extension-scripts",
    "build:extension-scripts": "cp -a ./extension/src/. ./extension/build/.",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "webextensions": true
    },
    "extends": [
      "react-app"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "^.+\\.cjs$"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git-format-staged -f 'prettier --stdin-filepath \"{}\"' src/*.js"
    }
  }
}
